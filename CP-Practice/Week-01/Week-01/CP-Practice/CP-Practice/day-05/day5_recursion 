#include <iostream>
using namespace std;

bool is even(int x) {
    return x % 2 == 0;
}

int factorial(int n) {
    if(n == 0) return 1;
    return n * factorial (n - 1);
}
int main() {
    int num;
    cout << "enter a number: ";
    cin >> num;

}
if (isEven(num)) {
cout << num << "id even/n"; 
else 
cout << num << is odd/n;
cout << "fsctorial of" << num <<" is: " << factorial(num) << endl;

return 0;
}